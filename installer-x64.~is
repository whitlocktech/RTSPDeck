function URLDownloadToFile(pCaller: Integer; szURL, szFileName: String; dwReserved: Integer; lpfnCB: Integer): Integer;
  external 'URLDownloadToFileA@urlmon.dll stdcall';

function DownloadFile(const Url, DestFile: string): Boolean;
begin
  Result := URLDownloadToFile(0, Url, DestFile, 0, 0) = 0;
end;

function IsDotNet8Installed(): Boolean;
var
  installPath: string;
begin
  // Check standard Desktop Runtime registry key
  Result := RegQueryStringValue(HKLM64,
    'SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\Microsoft .NET Desktop Runtime - 8 (x64)',
    'InstallLocation', installPath);

  // Fallback to version-specific key (e.g., 8.0.0)
  if not Result then
    Result := RegQueryStringValue(HKLM64,
      'SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\Microsoft .NET Desktop Runtime - 8.0.0 (x64)',
      'InstallLocation', installPath);
end;

var
  ErrorCode: Integer;

procedure InstallDotNet8IfNeeded();
var
  url, tempFile: string;
begin
  if not IsDotNet8Installed() then
  begin
    if MsgBox('.NET 8 Desktop Runtime is required for RTSPDeck. Do you want to download and install it now?',
              mbConfirmation, MB_YESNO) = IDYES then
    begin
      url := 'https://builds.dotnet.microsoft.com/dotnet/Sdk/8.0.413/dotnet-sdk-8.0.413-win-x64.exe';
      tempFile := ExpandConstant('{tmp}\dotnet-sdk-8.0.413-win-x64.exe');

      if DownloadFile(url, tempFile) then
      begin
        if not ShellExec('open', tempFile, '/install /quiet /norestart', '', SW_SHOWNORMAL, ewWaitUntilTerminated, ErrorCode) then
        begin
          MsgBox('Failed to launch .NET 8 SDK installer: ' + SysErrorMessage(ErrorCode), mbError, MB_OK);
          // Let the installer continue instead of aborting
        end;
      end
      else
      begin
        MsgBox('Failed to download .NET 8. Please install it manually from https://dotnet.microsoft.com/en-us/download/dotnet/8.0/runtime and rerun the installer.', mbCriticalError, MB_OK);
        // Let the installer continue instead of aborting
      end;
    end
    else
    begin
      MsgBox('Installation cancelled. RTSPDeck requires .NET 8 to run.', mbError, MB_OK);
      Abort;
    end;
  end;
end;

function InitializeSetup(): Boolean;
begin
  InstallDotNet8IfNeeded();
  Result := True;
end;

